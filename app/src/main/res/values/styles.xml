<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/buttonColibri</item>
        <item name="backgroundGradient">@drawable/selector_bg</item>
    </style>

    <style name="ButtonRetrofitStyle">
        <item name="android:layout_margin">26dp</item>
        <item name="android:padding">18dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText_Query_Style">
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:background">#E6EFEF</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
    </style>

    <style name="Title_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bg_textView_title</item>
        <item name="android:elevation">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Divider_style">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/backgroundGradient</item>
    </style>
</resources>